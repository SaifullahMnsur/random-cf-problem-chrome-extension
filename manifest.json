{
  "manifest_version": 3,
  "name": "Random CF Problem",
  "version": "2.0.0",
  "description": "Selects a random problem from Codeforces with advanced filters",
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "background",
    "notifications",
    "alarms"
  ],
  "host_permissions": [
    "https://codeforces.com/api/problemset.problems",
    "https://codeforces.com/api/contest.list",
    "https://api.github.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/icon16.png",
      "48": "assets/icon48.png",
      "128": "assets/icon128.png"
    }
  },
  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  }
}